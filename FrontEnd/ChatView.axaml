<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MyApp.ChatView">
    <DockPanel>
        <!-- Messages -->
        <ScrollViewer DockPanel.Dock="Top">
            <ItemsControl Items="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#3A3A3A" CornerRadius="8" Margin="5" Padding="10">
                            <TextBlock Text="{Binding Text}" Foreground="White"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Background="#2A2A2A" Padding="5">
            <TextBox Text="{Binding NewMessage, Mode=TwoWay}" Width="*"/>
            <Button Content="Send" Command="{Binding SendCommand}" Margin="5,0,0,0"/>
        </StackPanel>
    </DockPanel>
</UserControl>
