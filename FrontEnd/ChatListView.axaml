<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MyApp.ChatListView">
    <StackPanel>
        <TextBlock Text="Chats" FontSize="20" Margin="10" Foreground="White" />
        <ItemsControl Items="{Binding Chats}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Name}" Margin="5" Padding="10" 
                            Background="#3A3A3A" Foreground="White"
                            Command="{Binding DataContext.SelectChatCommand, 
                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
