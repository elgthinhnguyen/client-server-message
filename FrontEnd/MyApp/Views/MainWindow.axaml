<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MyApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MyApp">

   <Grid ColumnDefinitions="250, *" RowDefinitions="Auto, *">
        <!-- top bar -->
        <Border Grid.ColumnSpan="2" Background="#2b2b2b" Height="50"> 
            <DockPanel Margin="10,0"> 
                <TextBlock Text="Message application" 
                Foreground="White" 
                FontSize="18" 
                VerticalAlignment="Center" 
                DockPanel.Dock="Left"/> 
                </DockPanel> 
                </Border>
        <!-- search bar -->
        <Border Grid.Row="1" Background="#2e2e2e">
            <StackPanel>
                <TextBox Margin="10"
                 Watermark="Tìm kiếm"
                 Background="#3a3a3a"
                 Foreground="White"
                 BorderBrush="#444"
                 CornerRadius="5"/>
            <StackPanel Margin="10,0">
                <!-- contact list -->
            <StackPanel Orientation="Horizontal" Margin="5" Cursor="Hand" PointerPressed="Contact_Click"
                        >
                <Ellipse Width="40" Height="40" Fill="#4a90e2"/>
                <StackPanel Margin="10,0">
                    <TextBlock Text="Nguyễn Văn A" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="Thằng vừng rất ngô" Foreground="#ccc" FontSize="12"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" Cursor="Hand" PointerPressed="Contact_Click"
                        >
                <Ellipse Width="40" Height="40" Fill="#e94e77"/>
                <StackPanel Margin="10,0">
                    <TextBlock Text="Trần Thị B" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="Nhớ thằng vừng không?" Foreground="#ccc" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
                 
            </StackPanel>
            </Border>

        <!-- message box -->
        <Grid Grid.Row="2" Grid.Column="1" Background="#1f1f1f">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl x:Name="ContentArea" Grid.Column="1"/>
            <DockPanel Grid.Row="1" Background="#2b2b2b">
                
                <TextBox 
                         Background="#3a3a3a"
                         Foreground="White"
                         BorderBrush="#444"
                         CornerRadius="5"
                         Width="560"
                         Margin="10,6"
                         DockPanel.Dock="Left"
                         Watermark="Nhập tin nhắn..." 
                         HorizontalAlignment="Stretch" />
                <Button Content="Gửi"
                        Background="#4a90e2"
                        Foreground="White"
                        Width=""
                        Padding="10,5"
                        CornerRadius="5"
                        DockPanel.Dock="Right"/>
            </DockPanel>
        </Grid>
    </Grid> 

</Window>
